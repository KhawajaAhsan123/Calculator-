<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">




        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="0dp"
            android:textSize="30dp"
            android:textAlignment="textStart"
            android:paddingTop="50dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/white"
            android:text="Here Your Answer Occur"/>

        <Button

            android:id="@+id/buttonAC"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="AC"
            android:textSize="16dp"
            android:backgroundTint="#7FFFFFFF"
            android:textColor="@color/black"
            android:layout_below="@+id/two"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="2dp"/>

        <Button
            android:id="@+id/plusminus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/two"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="100dp"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:backgroundTint="#7FFFFFFF"
            />

        <Button
            android:id="@+id/percentage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/two"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="100dp"
            android:text="%"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#7FFFFFFF"
            />

        <Button
            android:id="@+id/divide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/two"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="100dp"
            android:text="/"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#A0FF9800"
            />

        <Button
            android:id="@+id/seven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="20dp"
            android:backgroundTint="#3C3A3A"
            android:textColor="@color/white"
            android:layout_below="@+id/buttonAC"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/plusminus"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="10dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:backgroundTint="#3C3A3A"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/percentage"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="10dp"
            android:text="9"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#3C3636"
                        />

        <Button
            android:id="@+id/multiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/divide"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="10dp"
            android:text="x"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#A0FF9800"
            />

        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="20dp"
android:backgroundTint="#3C3A3A"
            android:textColor="@color/white"
            android:layout_below="@+id/seven"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/eight"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="10dp"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:backgroundTint="#3C3A3A"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/nine"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="10dp"
            android:text="6"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#3C3A3A"
            />

        <Button
            android:id="@+id/minus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/multiply"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#A0FF9800"
            />

        <Button
            android:id="@+id/one1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="20dp"
            android:backgroundTint="#3C3A3A"
            android:textColor="@color/white"
            android:layout_below="@+id/four"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"/>

        <Button
            android:id="@+id/two2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/five"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="10dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="20dp"
           android:backgroundTint="#3C3A3A"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/six"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="10dp"
            android:text="3"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#3C3A3A"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/minus"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="10dp"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#A0FF9800"
            />

        <Button
            android:layout_width="350px"
            android:layout_height="70dp"
            android:layout_below="@+id/one1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#3C3A3A"
            android:text="0"
            android:textAlignment="center"
            android:paddingLeft="40dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/dot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/three"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="10dp"
            android:text="."
            android:textSize="25dp"
            android:paddingTop="-10dp"
            android:textColor="@color/white"
            android:backgroundTint="#3C3A3A"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/plus"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="10dp"
            android:text="="
            android:textSize="25dp"
            android:paddingTop="-10dp"
            android:textColor="@color/white"
            android:backgroundTint="#A0FF9800"
            />




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>